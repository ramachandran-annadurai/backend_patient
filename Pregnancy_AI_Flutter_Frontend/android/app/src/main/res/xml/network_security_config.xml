<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow all domains for development -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Trust system certificates -->
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
    
    <!-- Specific domain configuration for your backend -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">pregnancy-ai.onrender.com</domain>
        <domain includeSubdomains="true">pregnancy-mobile-app.onrender.com</domain>
        <domain includeSubdomains="true">onrender.com</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.38</domain>
    </domain-config>
</network-security-config>